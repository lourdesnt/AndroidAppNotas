<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtEstado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="76dp"
        android:text="Estado del alumno:"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/num_ad"
        android:layout_width="360dp"
        android:layout_height="48dp"
        android:layout_marginStart="49dp"
        android:layout_marginTop="167dp"
        android:layout_marginEnd="49dp"
        android:layout_marginBottom="219dp"
        android:ems="10"
        android:hint="Acceso a Datos"
        android:inputType="numberDecimal"
        app:layout_constraintBottom_toTopOf="@+id/num_e"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />

    <EditText
        android:id="@+id/num_di"
        android:layout_width="355dp"
        android:layout_height="48dp"
        android:layout_marginStart="49dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="49dp"
        android:ems="10"
        android:hint="Desarrollo Interfaces"
        android:inputType="numberDecimal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/num_ad" />

    <EditText
        android:id="@+id/num_pw"
        android:layout_width="356dp"
        android:layout_height="48dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="49dp"
        android:ems="10"
        android:hint="ProgramaciÃ³n Web"
        android:inputType="numberDecimal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/num_di"
        app:layout_constraintTop_toBottomOf="@+id/num_di" />

    <EditText
        android:id="@+id/num_e"
        android:layout_width="356dp"
        android:layout_height="54dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="252dp"
        android:ems="10"
        android:hint="Empresa"
        android:inputType="numberDecimal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/num_pw"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btn_evaluar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:onClick="evaluar"
        android:text="Evaluar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/num_e" />

    <TextView
        android:id="@+id/txt_res"
        android:layout_width="164dp"
        android:layout_height="26dp"
        android:layout_marginStart="23dp"
        android:layout_marginTop="1dp"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/txtEstado"
        app:layout_constraintTop_toTopOf="@+id/txtEstado" />
</androidx.constraintlayout.widget.ConstraintLayout>